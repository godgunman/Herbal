<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white" >

    <RelativeLayout
        android:id="@+id/measure_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MeasureActvitiy" >

        <RelativeLayout
            android:id="@+id/measureCountdownRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px" >

            <ImageView
                android:id="@+id/measureCountdown"
                android:layout_width="350px"
                android:layout_height="350px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/measure_countdown" />

            <TextView
                android:id="@+id/measure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="74"
                android:textSize="40pt" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/measure_value"
                android:layout_toRightOf="@+id/measure_value"
                android:text="bpm" />

            <LinearLayout
                android:id="@+id/space"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_centerInParent="true" >
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/measureCountdownCounter"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/measure_countdown_counter" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/measureCountdownRelativeLayout"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/measureBubbleContainer"
                android:layout_width="2000dp"
                android:layout_height="250dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/mockup_bubble1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-100dp"
                    android:src="@drawable/bubble1" />

                <ImageView
                    android:id="@+id/mockup_bubble3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/bubble3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-30dp"
                    android:src="@drawable/bubble1" />

                <ImageView
                    android:id="@+id/mockup_bubble2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-10dp"
                    android:src="@drawable/bubble2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-20dp"
                    android:src="@drawable/bubble1" />

                <ImageView
                    android:id="@+id/mockup_bubble3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/bubble3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-50dp"
                    android:src="@drawable/bubble2" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</ScrollView>